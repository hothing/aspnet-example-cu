@model ContosoUniversity.Models.CourseAssignment

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h1>Edit</h1>

<h4>CourseAssignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="InstructorID" />
            <input type="hidden" asp-for="CourseID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="CourseID" class="control-label">Course</label>
                <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
            <span asp-validation-for="CourseID" class="text-danger"></span>
            <label asp-for="InstructorID" class="control-label">Instructor</label>
                <select asp-for="InstructorID" class="form-control" asp-items="ViewBag.InstructorID"></select>
            <span asp-validation-for="InstructorID" class="text-danger"></span>
            <div>
                @ViewBag.Warning
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


</body>
</html>