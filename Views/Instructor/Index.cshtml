@model IEnumerable<ContosoUniversity.Models.Instructor>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.CourseAssignments)-->
                Course(s)
            </th>            
            <th>
                Office
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <!--@Html.DisplayFor(modelItem => item.HireDate)-->
                
                    @if (item.CourseAssignments != null)
                    {
                        @if (item.CourseAssignments.Count >= 1)
                        {                            
                            @foreach (var c in item.CourseAssignments)
                            {
                                <p>@c.Course.Title</p>
                            }                            
                        }
                        else 
                        {
                            @:<p>no assigned course</p>
                        }                       
                    }               
                                
            </td>
            <td>
                @if (item.OfficeAssignment != null)
                {
                    @item.OfficeAssignment.Location
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
